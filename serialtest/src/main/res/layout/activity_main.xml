<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.serialtest.MainActivity">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="port"
        android:text="dev/ttyS4"/>

    <EditText
        android:id="@+id/edit_baudrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="baudrate"
        android:text="9600"/>

    <EditText
        android:id="@+id/edit_send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="需要发送的数据"/>

    <EditText
        android:id="@+id/edit_receive_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="接收到的数据"/>

    <Button
        android:id="@+id/btn_open_gate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开闸机"/>

    <Button
        android:id="@+id/btn_close_gate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭闸机"/>

    <Button
        android:id="@+id/btn_infrared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="红外检测"/>

    <Button
        android:id="@+id/btn_gate_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="闸机检测"/>


    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送"/>
    <Button
        android:id="@+id/btn_turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进制转换"/>

</LinearLayout>
